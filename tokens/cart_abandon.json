{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$version": "1.0.0",
  "$description": "Design Tokens per template Cart Abandonment - estratti automaticamente da template storici",
  "$extensions": {
    "emailbuilder": {
      "templateType": "cart_abandon",
      "extractedFrom": ["HTML", "PDF", "Images"],
      "lastUpdated": "2025-01-01T00:00:00Z",
      "confidence": "high"
    }
  },
  "color": {
    "primary": {
      "$type": "color",
      "$value": "#dc2626",
      "$description": "Colore primario per urgenza (cart abandonment)",
      "$extensions": {
        "emailbuilder": {
          "usage": ["buttons", "cta", "urgency_indicators"],
          "extractedFrom": "HTML_CSS_analysis",
          "frequency": 0.85
        }
      }
    },
    "onPrimary": {
      "$type": "color",
      "$value": "#ffffff",
      "$description": "Testo su colore primario"
    },
    "secondary": {
      "$type": "color",
      "$value": "#64748b",
      "$description": "Colore secondario per elementi di supporto"
    },
    "background": {
      "$type": "color",
      "$value": "#f8fafc",
      "$description": "Background principale email"
    },
    "surface": {
      "$type": "color",
      "$value": "#ffffff",
      "$description": "Background elementi sovrapposti"
    },
    "text": {
      "$type": "color",
      "$value": "#1e293b",
      "$description": "Testo principale"
    },
    "textSecondary": {
      "$type": "color",
      "$value": "#64748b",
      "$description": "Testo secondario"
    },
    "accent": {
      "$type": "color",
      "$value": "#f59e0b",
      "$description": "Colore di accento per evidenziare"
    },
    "success": {
      "$type": "color",
      "$value": "#059669",
      "$description": "Colore per messaggi di successo"
    },
    "warning": {
      "$type": "color",
      "$value": "#d97706",
      "$description": "Colore per avvisi"
    },
    "error": {
      "$type": "color",
      "$value": "#dc2626",
      "$description": "Colore per errori"
    }
  },
  "typography": {
    "fontFamily": {
      "heading": {
        "$type": "fontFamily",
        "$value": ["Arial", "Helvetica", "sans-serif"],
        "$description": "Font per titoli",
        "$extensions": {
          "emailbuilder": {
            "extractedFrom": "HTML_CSS_analysis",
            "fallbacks": ["Helvetica", "sans-serif"],
            "webSafe": true
          }
        }
      },
      "body": {
        "$type": "fontFamily",
        "$value": ["Arial", "Helvetica", "sans-serif"],
        "$description": "Font per corpo testo"
      }
    },
    "fontSize": {
      "xs": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Testo molto piccolo (legal, disclaimer)"
      },
      "sm": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Testo piccolo (caption, metadata)"
      },
      "base": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Testo base (body, paragrafi)"
      },
      "lg": {
        "$type": "dimension",
        "$value": "18px",
        "$description": "Testo grande (lead, intro)"
      },
      "xl": {
        "$type": "dimension",
        "$value": "20px",
        "$description": "Titoli secondari"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Titoli principali"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "30px",
        "$description": "Titoli grandi (hero)"
      }
    },
    "fontWeight": {
      "normal": {
        "$type": "fontWeight",
        "$value": "400",
        "$description": "Peso normale"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": "500",
        "$description": "Peso medio"
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": "600",
        "$description": "Peso semi-grassetto"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "700",
        "$description": "Peso grassetto"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": 1.2,
        "$description": "Interlinea stretta (titoli)"
      },
      "normal": {
        "$type": "number",
        "$value": 1.5,
        "$description": "Interlinea normale (body)"
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.6,
        "$description": "Interlinea rilassata"
      }
    }
  },
  "spacing": {
    "xs": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Spaziatura extra piccola",
      "$extensions": {
        "emailbuilder": {
          "usage": ["fine_details", "borders"],
          "extractedFrom": "CSS_padding_margin_analysis"
        }
      }
    },
    "sm": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Spaziatura piccola"
    },
    "md": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Spaziatura media (standard)"
    },
    "lg": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "Spaziatura grande"
    },
    "xl": {
      "$type": "dimension",
      "$value": "32px",
      "$description": "Spaziatura extra large"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "Spaziatura molto grande"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "64px",
      "$description": "Spaziatura massima"
    }
  },
  "radius": {
    "none": {
      "$type": "dimension",
      "$value": "0px",
      "$description": "Nessun arrotondamento"
    },
    "sm": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Arrotondamento piccolo"
    },
    "md": {
      "$type": "dimension",
      "$value": "6px",
      "$description": "Arrotondamento medio"
    },
    "lg": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Arrotondamento grande"
    },
    "xl": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "Arrotondamento extra large"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Arrotondamento completo (pill)"
    }
  },
  "shadow": {
    "sm": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.05)"
      },
      "$description": "Ombra piccola"
    },
    "md": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "6px",
        "spread": "-1px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Ombra media"
    },
    "lg": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "10px",
        "blur": "15px",
        "spread": "-3px",
        "color": "rgba(0, 0, 0, 0.1)"
      },
      "$description": "Ombra grande"
    }
  },
  "component": {
    "button": {
      "primary": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.primary}",
          "color": "{color.onPrimary}",
          "borderRadius": "{radius.md}",
          "padding": "{spacing.sm} {spacing.lg}",
          "fontSize": "{typography.fontSize.base}",
          "fontWeight": "{typography.fontWeight.semibold}",
          "fontFamily": "{typography.fontFamily.body}"
        },
        "$description": "Bottone primario per CTA urgenti"
      },
      "secondary": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "transparent",
          "color": "{color.primary}",
          "border": "1px solid {color.primary}",
          "borderRadius": "{radius.md}",
          "padding": "{spacing.sm} {spacing.lg}",
          "fontSize": "{typography.fontSize.base}",
          "fontWeight": "{typography.fontWeight.medium}",
          "fontFamily": "{typography.fontFamily.body}"
        },
        "$description": "Bottone secondario"
      }
    },
    "card": {
      "product": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.surface}",
          "borderRadius": "{radius.lg}",
          "padding": "{spacing.lg}",
          "shadow": "{shadow.md}",
          "border": "1px solid rgba(0, 0, 0, 0.05)"
        },
        "$description": "Card per prodotti"
      }
    },
    "section": {
      "hero": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.surface}",
          "padding": "{spacing.2xl} {spacing.lg}",
          "textAlign": "center"
        },
        "$description": "Sezione hero"
      },
      "content": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.background}",
          "padding": "{spacing.xl} {spacing.lg}"
        },
        "$description": "Sezione contenuto"
      },
      "footer": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.secondary}",
          "padding": "{spacing.xl} {spacing.lg}",
          "color": "{color.textSecondary}",
          "fontSize": "{typography.fontSize.xs}"
        },
        "$description": "Footer email"
      }
    }
  }
}