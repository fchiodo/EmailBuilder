{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$version": "1.0.0",
  "$description": "Design Tokens per template Post Purchase - estratti automaticamente da template storici",
  "$extensions": {
    "emailbuilder": {
      "templateType": "post_purchase",
      "extractedFrom": ["HTML", "PDF", "Images"],
      "lastUpdated": "2025-01-01T00:00:00Z",
      "confidence": "high"
    }
  },
  "color": {
    "primary": {
      "$type": "color",
      "$value": "#059669",
      "$description": "Colore primario per successo (post purchase)",
      "$extensions": {
        "emailbuilder": {
          "usage": ["buttons", "cta", "success_indicators"],
          "extractedFrom": "HTML_CSS_analysis",
          "frequency": 0.90
        }
      }
    },
    "onPrimary": {
      "$type": "color",
      "$value": "#ffffff",
      "$description": "Testo su colore primario"
    },
    "secondary": {
      "$type": "color",
      "$value": "#64748b",
      "$description": "Colore secondario per elementi di supporto"
    },
    "background": {
      "$type": "color",
      "$value": "#f0fdf4",
      "$description": "Background principale email (tinta verde chiara)"
    },
    "surface": {
      "$type": "color",
      "$value": "#ffffff",
      "$description": "Background elementi sovrapposti"
    },
    "text": {
      "$type": "color",
      "$value": "#1e293b",
      "$description": "Testo principale"
    },
    "textSecondary": {
      "$type": "color",
      "$value": "#64748b",
      "$description": "Testo secondario"
    },
    "accent": {
      "$type": "color",
      "$value": "#10b981",
      "$description": "Colore di accento per evidenziare"
    },
    "success": {
      "$type": "color",
      "$value": "#059669",
      "$description": "Colore per messaggi di successo"
    },
    "info": {
      "$type": "color",
      "$value": "#0ea5e9",
      "$description": "Colore per informazioni"
    }
  },
  "typography": {
    "fontFamily": {
      "heading": {
        "$type": "fontFamily",
        "$value": ["Arial", "Helvetica", "sans-serif"],
        "$description": "Font per titoli"
      },
      "body": {
        "$type": "fontFamily",
        "$value": ["Arial", "Helvetica", "sans-serif"],
        "$description": "Font per corpo testo"
      }
    },
    "fontSize": {
      "xs": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Testo molto piccolo"
      },
      "sm": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Testo piccolo"
      },
      "base": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Testo base"
      },
      "lg": {
        "$type": "dimension",
        "$value": "18px",
        "$description": "Testo grande"
      },
      "xl": {
        "$type": "dimension",
        "$value": "20px",
        "$description": "Titoli secondari"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Titoli principali"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "30px",
        "$description": "Titoli grandi (hero)"
      }
    },
    "fontWeight": {
      "normal": {
        "$type": "fontWeight",
        "$value": "400"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": "500"
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": "600"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "700"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": 1.2
      },
      "normal": {
        "$type": "number",
        "$value": 1.5
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.6
      }
    }
  },
  "spacing": {
    "xs": {
      "$type": "dimension",
      "$value": "4px"
    },
    "sm": {
      "$type": "dimension",
      "$value": "8px"
    },
    "md": {
      "$type": "dimension",
      "$value": "16px"
    },
    "lg": {
      "$type": "dimension",
      "$value": "24px"
    },
    "xl": {
      "$type": "dimension",
      "$value": "32px"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "48px"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "64px"
    }
  },
  "radius": {
    "none": {
      "$type": "dimension",
      "$value": "0px"
    },
    "sm": {
      "$type": "dimension",
      "$value": "4px"
    },
    "md": {
      "$type": "dimension",
      "$value": "6px"
    },
    "lg": {
      "$type": "dimension",
      "$value": "8px"
    },
    "xl": {
      "$type": "dimension",
      "$value": "12px"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px"
    }
  },
  "component": {
    "button": {
      "primary": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.primary}",
          "color": "{color.onPrimary}",
          "borderRadius": "{radius.md}",
          "padding": "{spacing.sm} {spacing.lg}",
          "fontSize": "{typography.fontSize.base}",
          "fontWeight": "{typography.fontWeight.semibold}"
        },
        "$description": "Bottone primario per conferme positive"
      }
    },
    "section": {
      "hero": {
        "$type": "composite",
        "$value": {
          "backgroundColor": "{color.surface}",
          "padding": "{spacing.2xl} {spacing.lg}",
          "textAlign": "center",
          "borderBottom": "2px solid {color.primary}"
        },
        "$description": "Sezione hero con accento verde"
      }
    }
  }
}